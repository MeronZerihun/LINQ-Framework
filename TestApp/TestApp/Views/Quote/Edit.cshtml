@model TestApp.Models.Quote

@{
    ViewBag.Title = "Edit";
}
<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Quote", FormMethod.Post) ){
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model=>model.QuoteId)
    @Html.HiddenFor(model=>model.entryDate)
    <div class="container">
        
        <hr/>
        
        <div class="form-group">
            <p>Body</p>
            <div>
                @Html.TextAreaFor(model => model.body, new { @class = "form-control" })
                <span style="color:red">
                    @Html.ValidationMessageFor(model => model.body)
                </span>

            </div>
        </div>
        <div class="form-group">
            <p>Author Name</p>
            <div>
                @Html.TextBoxFor(model => model.authorName, new { @class = "form-control" })
                <span style="color:red">
                    @Html.ValidationMessageFor(model => model.authorName)
                </span>
            </div>
        </div>
        <br/>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-success" style=" width: 17%; display: block; margin: auto"/>
        </div>
        
    </div>
}

