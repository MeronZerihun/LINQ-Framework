@model TestApp.Models.Quote

@{
    ViewBag.Title = "Create";
}
<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">

        <hr />

        <div class="form-group">
            <p>Body</p>
            <div>
                @Html.TextAreaFor(model => model.body, new { @class = "form-control" })
                <span style="color:red">
                    @Html.ValidationMessageFor(model => model.body)
                </span>
            </div>
        </div>
        <div class="form-group">
            <p>Author Name</p>
            <div>
                @Html.TextBoxFor(model => model.authorName, new { @class = "form-control" })
                <span style="color:red">
                    @Html.ValidationMessageFor(model => model.authorName)
                </span>
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-success" style=" width: 17%; display: block; margin: auto" />
        </div>

    </div>
}